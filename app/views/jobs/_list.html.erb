<div class="row">
  <div class="col-xs-12">
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Contact</th>
          <th>Jobs</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td>
            <%= link_to job.name, client_job_path(@client,job), :class => "btn btn-primary btn-xs" %></td>
            <td><%= job.location %></td>
            <td>
                <% job.phases.each do |phase| %>
                  <%= link_to phase.name, job_phase_url(job, phase), :class => "btn btn-default btn-xs" %>
                <% end %>
            </td>
            <td class="text-right">
            <% if @current_role == 'admin' %>
              <%= link_to edit_client_job_path(@client,job), :class => 'btn btn-default btn-xs' do %>
                <span class="glyphicon glyphicon-pencil"></span>
              <% end %>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>