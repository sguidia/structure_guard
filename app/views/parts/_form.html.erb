<%= simple_form_for [@panel, @part] do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.label :part_type_id %><br>
    <%= f.collection_select :part_type_id, PartType.all, :id, :name, {:include_blank => '- select part type -'}, {:class => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :panel_id %><br>
    <%= f.collection_select :panel_id, Panel.all, :id, :structure_id, {:include_blank => '- select panel -'}, {:class => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :length %><br>
    <%= f.text_field :length, :type => "number", :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :width %><br>
    <%= f.text_field :width, :type => "number", :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :height %><br>
    <%= f.text_field :height, :type => "number", :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :count %><br>
    <%= f.text_field :count, :type => "number", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", :data => {'loading-text' => 'Submitting...'}, :class => 'btn btn-lg btn-success' %>
  </div>
<% end %>
