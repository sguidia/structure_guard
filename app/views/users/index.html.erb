<div class="page-header">
  <h1>
    Users
  </h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Created</th>
      <th>Role</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= full_time(user.created_at)%></td>
      <td><%= user.role %></td>
      <td class="text-right"><%= link_to edit_user_path(user), :class => 'btn btn-default btn-xs' do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "Create User", new_user_path, :class => 'btn btn-primary' %>