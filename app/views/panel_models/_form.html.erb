<%= simple_form_for @panel_model, :html => { :multipart => true, :class => "validate" } do |f| %>
  <%= f.error_notification %>

    <% if !@panel_models_edit %>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, :required => true, :class => "form-control" %>
    </div>
    <% end %>

    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, :rows => '8', :class => "form-control" %>
    </div>

    <div class="form-group form-image-container">
    <%= f.label :panel_model_image, 'Image' %><br>
    <% if @panel_models_edit && @panel_model.panel_model_image.presence %>
      <div class="form-image-view">
        <%= image_tag @panel_model.panel_model_image.url(:thumb) %><br>
        <a href="#" class="replace-image">Replace</a>
      </div>
      <div class="form-image-field">
        <%= f.file_field :panel_model_image %>
      </div>
    <% else %>
      <%= f.file_field :panel_model_image %>
    <% end %>
    </div>

    <% if @panel_models_edit %>
      <%= f.hidden_field :name %>
    <% end %>

    <div class="form-group text-right">
      <%= f.submit "Submit", :data => {'loading-text' => 'Submitting...'}, :class => "btn btn-success" %>
    </div>

<% end %>
