<%= simple_form_for(@nest_run) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
  <%= f.label :manufacturing_job_id %><br>
  <%= f.collection_select :manufacturing_job_id, ManufacturingJob.all, :id, :name, {:include_blank => '- select job -'}, {:class => 'form-control'} %>
  </div>
  <div class="form-group">
  <%= f.label :material_id %><br>
  <%= f.collection_select :material_id, Material.all, :id, :name, {:include_blank => '- select material -'}, {:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", :data => {'loading-text' => 'Submitting...'}, :class => 'btn btn-lg btn-success' %>
  </div>
<% end %>
